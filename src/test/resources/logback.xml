<configuration>
  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d %-5p [%c{1}] %m %n</pattern>
    </encoder>
  </appender>
  <logger name="ru.shubert" level="debug"/>
  <root level="debug">
    <appender-ref ref="stdout"/>
  </root>
</configuration>